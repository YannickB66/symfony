{% extends 'basekgb.html.twig' %}

{% block title %}Administation{% endblock %}

{% block body %}


    <div class="container-lg text-center p-5">
        <h1>
            Modifier une mission
        </h1>
    </div>


    <div class="container-lg text-center font d1">
        <div class="grid-name row">
            <div class="col border ">
                Title
            </div>

            <div class="col border ">
                Codename
            </div>
            <div class="col border ">
                Statut
            </div>
            <div class="col border ">
                Type
            </div>
            <div class="col border ">
                Debut
            </div>
            <div class="col border ">
                Fin
            </div>
            <div class="col border ">
                Pays
            </div>
            <div class="col border ">
                specialit√©
            </div>
        </div>

        {% for mission in missions %}
            <div class="row">

                <div class="col border">
                    <a href="/kgb/admin/mod_mission/{{ mission.id }}"><div >{{ mission.title }}</div></a>
                </div>

                <div class="col border">
                    <div >{{ mission.codename }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.statut }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.type }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.dateStart|date('d/m/Y') }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.dateEnd|date('d/m/Y') }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.country }}</div>
                </div>
                <div class="col border">
                    <div >{{ mission.requireSpeciality.name }}</div>
                </div>

            </div>
        {% endfor %}

        <button style="margin: 20px"><a style="text-decoration: none; color: black" href="/kgb/admin">Retour</a></button>

    </div>


{% endblock %}